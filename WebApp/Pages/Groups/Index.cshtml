@page "/{organisation}/Groups"
@using ChatChainCommon.DatabaseModels
@model IndexModel
@{
    ViewData["Title"] = "Groups";
    Layout = "Shared/_ClientGroupsLayout";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <div class="row">
        <table class="table">
            <thead>
            <tr>
                <th>Database Id</th>
                <th>Group Name</th>
                <th>Group Id</th>
                <th>Group Description</th>
                <th>
                    @if (Model.Organisation.Users[User.Claims.First(claim => claim.Type.Equals("sub")).Value].Permissions.Contains(OrganisationPermissions.CreateGroups)
                         || Model.Organisation.Users[User.Claims.First(claim => claim.Type.Equals("sub")).Value].Permissions.Contains(OrganisationPermissions.All))
                    {
                        <a class="btn btn-success btn-sm" asp-page="./Create" asp-route-organisation="@Model.Organisation.Id">Create New</a>
                    }
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (Group group in Model.Groups)
            {
                <tr>
                    <td>
                        @Html.DisplayTextFor(m => group.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(m => group.GroupName)
                    </td>
                    <td>
                        @Html.DisplayFor(m => group.GroupId)
                    </td>
                    <td>
                        @Html.DisplayFor(m => group.GroupDescription)
                    </td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-primary btn-sm" asp-page="./Clients" asp-route-organisation="@Model.Organisation.Id" asp-route-group="@group.Id">View Clients</a>
                            @if (Model.Organisation.Users[User.Claims.First(claim => claim.Type.Equals("sub")).Value].Permissions.Contains(OrganisationPermissions.EditGroups)
                                 || Model.Organisation.Users[User.Claims.First(claim => claim.Type.Equals("sub")).Value].Permissions.Contains(OrganisationPermissions.All))
                            {
                                <a class="btn btn-primary btn-sm" asp-page="./Edit" asp-route-organisation="@Model.Organisation.Id" asp-route-group="@group.Id">Edit</a>
                            }
                            @if (Model.Organisation.Users[User.Claims.First(claim => claim.Type.Equals("sub")).Value].Permissions.Contains(OrganisationPermissions.DeleteGroups)
                                 || Model.Organisation.Users[User.Claims.First(claim => claim.Type.Equals("sub")).Value].Permissions.Contains(OrganisationPermissions.All))
                            {
                                <a class="btn btn-danger  btn-sm" asp-page="./Delete" asp-route-organisation="@Model.Organisation.Id" asp-route-group="@group.Id">Delete</a>
                            }
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>