@page "/{organisation}/Groups/Create"
@model CreateModel
@{
    ViewData["Title"] = "Create";
    Layout = "Shared/_ClientGroupsLayout";
}
<!--suppress ALL -->
<div class="container">
    <h2>Create new group</h2>
    <hr/>
    <div class="row">
        <div class="col-md-4">
            <form method="post" id="edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.GroupName" class="control-label"></label>
                    <input asp-for="Input.GroupName" class="form-control"/>
                    <span asp-validation-for="Input.GroupName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.GroupDescription" class="control-label"></label>
                    <textarea class="form-control" form="edit" id="Input_GroupDescription" name="Input.GroupDescription" cols="40" rows="5"></textarea>
                    <span asp-validation-for="Input.GroupDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success"/>
                    <a asp-page="./Index" asp-route-organisation="@Model.Organisation.Id" class="btn btn-danger">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}