@page
@model CreateModel
@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <h2>Create new group</h2>
    <hr/>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.GroupName" class="control-label"></label>
                    <input asp-for="Input.GroupName" class="form-control"/>
                    <span asp-validation-for="Input.GroupName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.GroupDescription" class="control-label"></label>
                    <input asp-for="Input.GroupDescription" class="form-control"/>
                    <span asp-validation-for="Input.GroupDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success"/>
                    <a asp-page="./Index" class="btn btn-danger">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}