@page "/{organisation}/Groups/{group}/Clients"
@using ChatChainCommon.DatabaseModels
@model ClientsModel
@{
    ViewData["Title"] = $"Clients | {Model.Group.GroupName}";
    Layout = "Shared/_ClientGroupsLayout";
}
<div class="container">
    <h2>@ViewData["Title"]</h2>

    <div class="row">
        <table class="table" style="color: white">
            <thead>
            <tr>
                <th>Client Id</th>
                <th>Client Name</th>
                <th>Client Description</th>
                <th>
                    @if (Model.Organisation.Users[User.Claims.First(claim => claim.Type.Equals("sub")).Value].Permissions.Contains(OrganisationPermissions.EditGroups)
                         || Model.Organisation.Users[User.Claims.First(claim => claim.Type.Equals("sub")).Value].Permissions.Contains(OrganisationPermissions.All))
                    {
                        <a class="btn btn-success btn-sm" asp-page="./EditClients" asp-route-organisation="@Model.Organisation.Id" asp-route-group="@Model.Group.Id">Edit Clients</a>
                    }
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (Client client in Model.Clients)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => client.ClientId)
                    </td>
                    <td>
                        @Html.DisplayFor(m => client.ClientName)
                    </td>
                    <td>
                        @Html.DisplayFor(m => client.ClientDescription)
                    </td>
                    <td></td>
                </tr>
            }
            </tbody>
        </table>
    </div>

    <div>
        <a asp-page="./Index" asp-route-organisation="@Model.Organisation.Id" class="btn btn-danger">Back to Groups</a>
    </div>
</div>