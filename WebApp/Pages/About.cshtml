@page
@model AboutModel

@using System.Security.Claims
@using Microsoft.AspNetCore.Authentication

<h2>User Claims</h2>

<dl>
    @foreach (Claim claim in User.Claims)
    {
        <dt>@claim.Type</dt>
        <dd>@claim.Value</dd>
    }
</dl>

<h2>User Properties</h2>

<dl>
    @foreach (KeyValuePair<string, string> prop in (await HttpContext.AuthenticateAsync()).Properties.Items)
    {
        <dt>@prop.Key</dt>
        <dd>@prop.Value</dd>
    }
</dl>