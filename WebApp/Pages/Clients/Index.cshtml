@page
@model IndexModel

@{
    ViewData["Title"] = "Clients";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-page="./Create">Create New</a>
</p>

<div class="row">
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Client Name</th>
                <th>Client Description</th>
            </tr>
            </thead>
            <tbody>
                @foreach (var client in Model.Clients)
                {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => client.ClientId)
                            </td>
                            <td>
                                @Html.DisplayFor(m => client.ClientName)
                            </td>
                            <td>
                                @Html.DisplayFor(m => client.ClientDescription)
                            </td>
                            <td>
                                <a asp-page="./ClientConfig" asp-route-clientId="@client.ClientId">Config</a>
                                <a asp-page="./Edit" asp-route-id="@client.ClientId">Edit</a>
                                <a asp-page="./Delete" asp-route-id="@client.ClientId">Delete</a>
                            </td>
                        </tr>
                }
            </tbody>
        </table>
</div>