@page
@model ClientConfig
@{
    ViewData["Title"] = "Client Config";
}

<h2>Client Config</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Client.ClientId"/>
            <div class="form-group">
                <label class="control-label">Client Event Groups: </label>
                <select asp-for="SelectedClientEventGroups" asp-items="Model.GroupOptions"></select>
            </div>
            <div class="form-group">
                <label class="control-label">User Event Groups: </label>
                <select asp-for="SelectedUserEventGroups" asp-items="Model.GroupOptions"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}