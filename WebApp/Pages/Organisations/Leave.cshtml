@page "/Organisations/{organisation}/Leave"
@model WebApp.Pages.Organisations.Leave
@{
    ViewData["Title"] = "Leave";
}
<div class="container">
    <h3>Are you sure you want to leave this Organisation?</h3>
    <div>
        <hr/>
        <dl class="dl-horizontal">
            <dt>
                <p>Name:</p>
            </dt>
            <dd>
                @Html.DisplayFor(m => m.Organisation.Name)
            </dd>
        </dl>
        <form method="post">
            <input type="hidden" asp-for="Organisation.Id"/>
            <input type="submit" value="Leave" class="btn btn-danger"/>
            <a asp-page="./Index" class="btn btn-success">Back to List</a>
        </form>
    </div>
</div>