@page
@model IndexModel
@{
    ViewData["Title"] = "Homepage";
}

<section class="hero fullheight-with-navbar">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-6 mx-auto col-md-6 order-md-2">
                <img class="img-fluid mb-3 mb-md-0 max-height" src="/images/messages.svg"/>
            </div>
            <div class="col-md-6 order-md-1">
                <h1>ChatChain Makes It Easy</h1>
                <p>The aim of ChatChain is to provide an easy and flexible way to link your favorite chat services and games together, while still allowing for much more advanced configuration if wanted.</p>
                <a asp-page="/Account/Login" class="btn btn-primary">Get Started</a>
            </div>
        </div>
    </div>
    <div class="next-section-spacer is-primary-alt"></div>
</section>

<section class="is-primary-alt fullheight">
    <div class="container">
        <h2 class="text-center">Compatible with all the products you love.</h2>
        <p class="text-center">ChatChain is compatible with many different services, this flexibility allows you to structure your online community however you wish.</p>
        <div class="row">
            <div class="col-md-3 col-sm-12">
                <div class="compatible-logos">
                    <img src="/images/slack_logo.png" alt="Slack Logo"/>
                </div>
            </div>
            <div class="col-md-3 col-sm-12">
                <div class="compatible-logos">
                    <img src="/images/minecraft_logo.png" alt="Minecraft Logo"/>
                </div>
            </div>
            <div class="col-md-3 col-sm-12">
                <div class="compatible-logos">
                    <p>#IRC</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-12">
                <div class="compatible-logos">
                    <img src="/images/discord_logo.png" alt="Discord Logo"/>
                </div>
            </div>
        </div>
        <div class="row align-items-center" style="padding-top: 1em">
            <div class="col-md-6 col-sm-12">
                <img src="/images/open_source.svg" id="open-source-img"/>
            </div>
            <div class="col-md-6 col-sm-12">
                <h3>Contribute to <b>Chat</b>Chain</h3>
                <h1>
                    <b>OPEN SOURCE</b>
                </h1>
                <p>ChatChain is an open source project, we would love your help in making our platform even better, click on the button below to learn more.</p>
                <a href="https://github.com/ldtteam/chatchain" class="btn btn-primary" style="width: 10em;">Visit GitHub</a>
            </div>
        </div>


    </div>
</section>

<section class="circuit-background">
    <div class="container">
        <div class="row " id="footer">
            <div class="col" style="text-align: left">
                <h5>
                    <a class="navbar-brand" href="/">
                        <img src="/images/ChatChainLogo.png" width="32" height="32" alt="ChatChain Logo"/>
                    </a>
                </h5>
                ChatChain aims to bring the online chat service community closer than ever before.
            </div>
            <div class="col" style="text-align: right">
                <h5>
                    <a class="navbar-brand" hrerf="https://github.com/ldtteam">
                        <img src="/images/LDTTeamLogo.png" width="32" height="32" alt="LDTTeam Logo"/>
                    </a>
                </h5>
                <span>Brougt to you by Let's Dev Together</span>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}