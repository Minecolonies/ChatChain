{
  "ReRoutes": 
  [
    {
      "_comment": "This is the route for the ChatChain hub",
      "DownstreamPathTemplate": "/hubs/{hub}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": 
      [
        {
          "Host": "chatchain",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/hubs/{hub}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ]
    },
    {
      "_comment": "This is the route for the ChatChain WebApp",
      "DownstreamPathTemplate": "/{webApp}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": 
      [
        {
          "Host": "chatchain-webapp",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/{webApp}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT" ]
    },
    {
      "_comment": "This is the route for the ChatChain IdentityServer",
      "DownstreamPathTemplate": "/connect/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": 
      [
        {
          "Host": "chatchain-identity",
          "Port": 80
        }  
      ],
      "UpstreamPathTemplate": "/connect/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT" ]
    },
    {
      "_comment": "This is the route for the ChatChain IdentityServer (.well-known)",
      "DownstreamPathTemplate": "/.well-known/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts":
      [
        {
          "Host": "chatchain-identity",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/.well-known/{everything}",
      "UpstreamHttpMethod": [ "GET" ]
    }
  ],
  "GlobalConfiguration":
  {
    "_comment": "Fill this out with what domain name is pointed to ocelot",
    "BaseUrl": "https://chatchain.minecolonies.com"
  }
}